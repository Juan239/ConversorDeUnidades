<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffe5"
    android:orientation="vertical"
    android:id="@+id/scrollView"
    tools:context=".longitudFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="120dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/valorEntrada"
            android:gravity="center"
            android:background="@drawable/fondo_edit_text"
            android:layout_margin="10dp"/>

        <Spinner
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/spinnerLongitud"
            android:background="@drawable/style_spinner"/>


    </LinearLayout>

    <TableLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center"
        android:background="@drawable/fondo_tabla">

        <TableRow>

            <TextView
                android:layout_width="115dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="0"
                android:id="@+id/resultadoMilimetros"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Milímetros"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="0"
                android:id="@+id/resultadoCentimetros"
                android:textSize="18dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Centímetros"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="0"
                android:id="@+id/resultadoMetros"
                android:textSize="18dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Metros"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="0"
                android:id="@+id/resultadoKilometros"
                android:textSize="18dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Kilometros"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="1"
                />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="120dp"
            android:layout_height="62dp"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:id="@+id/valorEntradaGrados"
            android:gravity="center"
            android:background="@drawable/fondo_edit_text"
            android:layout_margin="10dp"/>

        <Spinner
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:id="@+id/spinnerGrados"
            android:background="@drawable/style_spinner"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center"
        android:background="@drawable/fondo_tabla">

        <TableRow>

            <TextView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="0"
                android:id="@+id/resultadoCentesimal"
                android:textSize="18dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Centesimales"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="1"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="0"
                android:id="@+id/resultadoSexagesimal"
                android:textSize="18dp"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Sexagesimales"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="1"
                />

        </TableRow>

    </TableLayout>

    </LinearLayout>
</ScrollView>